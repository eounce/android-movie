<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cinema">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app"
        android:supportsRtl="true"
        android:theme="@style/NoTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ReservationChcekActivity"></activity>
        <activity android:name=".SearchMovieActivity" />
        <activity android:name=".PhotoViewActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/splashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMovieActivity" />
        <activity android:name=".AllReviewActivity" />
        <activity
            android:name=".ReviewContentsActivity"
            android:label="한줄평 작성" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>